extends layout

block content
                           
    div(class="container login", style="margin-top: 8%;text-align: center;position: relative;")
        a(href="/search")
            img(src="/images/yoke4.png", alt="The Yoke",  title="Yoke", style="border-width:0px;")
        if !messageSuccess
            h1= i18n.__("index.changepass.message3")
            p!= i18n.__("index.changepass.message1")
        if messageSuccess
            h1 Congrats.
            p!= messageSuccess
        div(id="ctl00_Div2")
        if message
            div(class="alert alert-danger")!= message
        if displayForm
            form(action="/changepassword" method="post")
                input(name="hashid" type="hidden" id="hashid" value=hashid placeholder=hashid)
                div(class="textentry")
                    input(name="pass" type="password" id="pass" class="pass form-control" placeholder=i18n.__("index.changepass.placeholder1"))
                div(class="textentry")
                    input(name="repass" type="password" id="repass" class="repass form-control" placeholder=i18n.__("index.changepass.placeholder2"))
                div(class="buttons")
                    button.btn.btn-success.btn-lg.btn-block(type='submit' class="changepassword")!= i18n.__("index.changepass.button")
                    img(src="/images/lab.png", alt="The Lab", title="Lab", style="border-width:0px; width: 50px; margin-top: -50px; margin-left: 300px;")
        
        

extends layout

block content


    div(class="container login")
        div(style="float: left;")
            a(href="/search")
                img(src="/images/yoke4.png", alt="The Yoke",  title="Yoke", class="yokelogo")
            h1= 'Hello ' + labyoker + "."
            p
              span="This page is dedicated to " 
              span(style="color: #3d9dcb;")="you. "
              span="If you wish to change your personal details such as your telephone number or Lab information."
            div(class="table-responsive")
                         -var ob = userDetails
                         - var j = 1
                         -for(var prop in ob)
                            - var i = prop % 2
                            - var classname = "";
                            - if(i==0)
                                - classname = "active"
                            - if(prop==1)
                                - classname = "you info-best"
                            - var name = ob[prop].name
                            - var surname = ob[prop].surname
                            - var email = ob[prop].email
                            - var tel = ob[prop].tel
                            - var admin = ob[prop].admin
                            - var adminIntro = ""
                            - var lab = ob[prop].lab
                            - if(!name)
                                - name = "..."
                            - if(!email)
                                - email = "..."
                            - if(!surname)
                                - surname = "..."
                            - if(!tel)
                                - tel = "..."
                            - if(admin == 1)
                                - adminIntro = "You are an administrator."
                            - if(!lab)
                                - lab = "..."
                            p(class="yokeColor", style="font-weight:bold")!=adminIntro
                            div(style="float:left;")
                              div(class="labColor", style="font-weight:bold; margin-bottom:10px;")="Name"
                              div(class="labColor", style="font-weight:bold; margin-bottom:10px;")="Surname"
                              div(class="labColor", style="font-weight:bold; margin-bottom:10px;")="Email"
                              div(class="labColor", style="font-weight:bold; margin-bottom:10px;")="Tel"
                              div(class="labColor", style="font-weight:bold; margin-bottom:10px;")="Lab"
                            div(style="margin-left: 100px;", class="wrapped")
                              div(style="margin-bottom:10px;", id="name")!= name + " "
                                form(action="/changename" id="changename" method="post" class="nameform")
                                  input(name="nameform" type="text" id="nameform" value=name)
                                span(onclick="updatename()", class="fa fa-pencil")
                              div(style="margin-bottom:10px;", id="surname")!= surname + " "
                                form(action="/changesurname" id="changesurname" method="post" class="surnameform")
                                  input(name="surnameform" type="text" id="surnameform" value=surname)
                                span(onclick="updatesurname()", class="fa fa-pencil")
                              div(style="margin-bottom:10px;") #{email}
                              div(style="margin-bottom:10px;", id="tel")!= tel + " "
                                form(action="/changetel" id="changetel" method="post" class="telform")
                                  input(name="telform" type="text" id="telform" value=tel)
                                span(onclick="updatetel()", class="fa fa-pencil")
                              div(style="margin-bottom:10px;") #{lab}


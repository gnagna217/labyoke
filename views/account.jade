extends layout

block content


    div(class="container login")
        div(style="float: left;")
            a(href="/search")
                img(src="/images/yoke4.png", alt="The Yoke",  title="Yoke", class="yokelogo")
            h1= 'Hello ' + labyoker + "."
            p
              span="This page is dedicated to " 
              span(style="color: #3d9dcb;font-weight:bold")="you. "
              span="If you wish to change your personal details such as your telephone number or Lab information. Or just to check what those details currently are."
            div(class="table-responsive")
                         -var ob = userDetails
                         - var j = 1
                         -for(var prop in ob)
                            - var i = prop % 2
                            - var classname = "";
                            - if(i==0)
                                - classname = "active"
                            - if(prop==1)
                                - classname = "you info-best"
                            - var name = ob[prop].name
                            - var surname = ob[prop].surname
                            - var email = ob[prop].email
                            - var tel = ob[prop].tel
                            - var admin = ob[prop].admin
                            - if(!name)
                                - name = "..."
                            - if(!email)
                                - email = "..."
                            - if(!surname)
                                - surname = "..."
                            - if(!tel)
                                - tel = "..."
                            - if(!admin)
                                - admin = "..."
                            div(style="float:left;")
                              p="Name"
                              p="Surname"
                              p="Email"
                              p="Tel"
                              p="Admin"
                            div(style="margin-left: 100px;", class="wrapped")
                              p #{name}
                              p(class="desktabonly") #{surname}
                              p #{email}
                              p #{tel}
                              p #{admin}



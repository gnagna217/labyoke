extends layout

block content


  div(class="container login")
     a(href="/login")
        img(src="/images/yoke.jpg", alt="The Yoke",  title="Yoke", style="border-width:0px; width: 300px")
     h1= 'Hello!'
     p You are on your way to Lab Yoking with fellow researchers. Registering is a breeze!
     div(id="ctl00_Div2" class="row")
       div
        if message
            div(class="alert alert-danger")!= message
        form(action="/register" method="post")
            div(class="textentry")
                input(name="firstname" type="text" id="firstname" class="form-control" placeholder="First Name")
            div(class="textentry")
                input(name="lastname" type="text" id="lastname" class="form-control" placeholder="Last Name")

            div(class="textentry")
                input(name="lab" type="text" id="lab" class="form-control" placeholder="Lab")

            div(class="textentry")
                input(name="email" type="text" id="email" class="form-control" placeholder="Email Address")
            div(class="textentry")
                input(name="tel" type="text" id="tel" class="form-control" placeholder="Telephone")
            

            div(class="textentry")
                input(name="user" type="text" id="user" class="form-control" placeholder="Username")
            div(class="textentry")
                input(name="pass" type="password" id="pass" class="form-control" placeholder="Password")
            div(class="textentry")
                input(name="verpass" type="password" id="pass" class="form-control" placeholder="Verify Password")
            div(class="buttons")
                //input(type="submit" class="button" value="Register")
                button.btn.btn-success.btn-lg.btn-block(type='submit') Start Lab Yoking
                img(src="images/lab.png", alt="The Lab", title="Lab", style="border-width:0px; width: 50px; margin-top: -50px; margin-left: 300px;")
 
     div(style="padding:5px")
        


      script.
        function rotateCard(btn){
            var $card = $(btn).closest('.teamcolumn');
            var $front = $card.find('.front');
            console.log($front);
            if($card.hasClass('hover')){
                $card.removeClass('hover');
                $front.show();
            } else {
                $card.addClass('hover');
                $front.hide();
            }
        }

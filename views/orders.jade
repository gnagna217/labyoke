                          tr(class=isnew)
                            td(class="desktabonly")= i
                            td(class="wrapped") #{ob[prop].agent}
                            td #{ob[prop].vendor}
                            td(class="desktabonly") #{ob[prop].catalognumber}
                            td #{d}

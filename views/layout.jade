doctype html
html(lang='en')
   head
     title= 'Lab Yoke - ' + title
     link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.12/datatables.min.css")
     link(href='/css/popup.css', rel='stylesheet')
     link(href='/css/bootstrap.css', rel='stylesheet')
     link(href='/css/bl.css', rel='stylesheet')
     link(href='/css/fontello.css', rel='stylesheet')
     link(href='/css/font-awesome.css', rel='stylesheet')
     link(href='/css/animation.css', rel='stylesheet')
     if (title=='Share')
       link(href='/css/normalize.css', rel='stylesheet')
       link(href='/css/component.css', rel='stylesheet')
       link(href='//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css', rel='stylesheet')
     if (title=='Orders')
      link(href='//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css', rel='stylesheet')
     meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
     meta(http-equiv='X-UA-Compatible', content='IE=edge')
     meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=0')
     meta(name='robots', content='noindex, nofollow')
     link(rel='shortcut icon', href='/images/BLlogin.png')
     script(type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
     script(type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.12/datatables.min.js")
     link(rel="shortcut icon" href="/images/favicon.ico")


     if scripts
       each script in scripts
          script(type='text/javascript', src=script)
   - var user = labyoker
   - if(user != null && user != undefined && user.length>11)
        - user = user.substring(0, 8)
        - if(user.substring(8,8) == " ")
           - user = user.substring(0,7)
   body(class=loggedIn)
     if (loggedIn==true)
        .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container.nobottom
                .navbar-header(style="float:left; margin-left:auto;")
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse', style="border-color:#8a6d3b")
                        
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar

                    - activateReports = ""
                    - activateShares = "addMargin "
                    - activateSearch = "addMargin "
                    - activateHelp = ""
                    - activateOrders = ""
                    - activateAccount = "addMargin "
                    - if (title == 'Reports')
                        - activateReports = "labColorBackground"
                    - if (title == 'Share')
                        - activateShares = activateShares + "labColorBackground"
                    - if (title == 'Search')
                        - activateSearch = activateSearch + "labColorBackground"
                    - if (title == 'Help')
                        - activateHelp = "labColorBackground"
                    - if (title == 'Orders')
                        - activateOrders = "labColorBackground"
                    - if (title == 'Account')
                        - activateAccount = activateAccount + "labColorBackground"

                .collapse.navbar-collapse
                    div(style="float:left")
                        ul.nav.navbar-nav
                            li(class=activateSearch)
                                a(href="/search", class="nav-menu",id="menusearch")
                                    span(class="fa fa-search colmenu")
                                    span=" Search"
                            li(class=activateHelp)
                                a(href='/help', class="nav-menu",id="menusearch")
                                    span(class="fa fa-anchor colmenu")
                                    span!=" Help "
                            
                    div(style="padding-left: 130px;")
                        ul.nav.navbar-nav(id="menumyshares", class="addMargin", style="border-left-color: white;border-left-style: solid;border-width: thin;")
                            li(class=activateShares)
                                a(href="/share",class="nav-menu",id="menushare")
                                    span(class="fa fa-exchange colmenu")
                                    span=" Shares"
                            li(class=activateOrders)
                                a(href="/orders",class="nav-menu",id="menushare")
                                    span(class="fa fa-ship colmenu")
                                    span=" Orders"
                        ul.nav.navbar-nav(id="menumyaccount", class="addMargin", style="border-left-color: white;border-left-style: solid;border-width: thin;")
                            li(class=activateAccount)
                                a(href="/account",class="nav-menu", id="menumyaccounta")
                                    span(class="fa fa-cog colmenu")
                                    span(class="desktabonly2")=" " + user + "'s"
                                    span=" Account"
                            if(isLoggedInAdmin == 1)
                                li(class=activateReports)
                                    a(href="/reports",class="nav-menu", id="menumyaccounta")
                                        span(class="fa fa-files-o colmenu")
                                        span=" Reports"
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/logout',class="nav-menu-logout") Logout
     block content
     script(type="text/javascript" src="/javascripts/bootstrap.min.js")
     script(type="text/javascript" src="/javascripts/popup.js")
     if (title=='Share')
       script(type="text/javascript" src="/javascripts/custom-file-input.js")
     div(style="margin-top: 40px; background-color: #8a6d3b; position: fixed;bottom: 0;width: 100%;")
            div(style="color:white; text-align:center; font-size:11px;")="@labyoke"
    script.
        function preload(arrayOfImages) {
            $(arrayOfImages).each(function(){
                $('<img/>')[0].src = this;
            });
        }
        preload([
         'images/yoke.jpg'
        ]);

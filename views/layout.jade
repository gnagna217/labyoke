                        - activate = "activeNav"
                    - activate = ""
                        - if (menu == 'calendar')
                            - activate = "activeNav"

                    - activate = ""
                        - if (menu == 'ranking')
                            - activate = "activeNav"

                .collapse.navbar-collapse
                    div(style="float:left")
                        ul.nav.navbar-nav

                            li(class=activate)
